@model IEnumerable<CompleteSchoolManagement.Models.Material>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materials</h2>
<a href="@Url.Action("Index","Courses")" class="btn btn-outline-dark w-100 mt-3 mb-1">Go To Courses</a>

<p>
    <a class="btn btn-outline-primary w-100" href="@Url.Action("Create","Materials")">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Laboratory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exercise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Laboratory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Solution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Name)
            </td>
            <td>
                <a class="btn btn-outline-warning" href="@Url.Action("Edit","Materials", new { id = item.Id })">Edit</a> |
                <a class="btn btn-outline-info" href="@Url.Action("Details","Materials", new { id = item.Id })">Details</a> |
                <a class="btn btn-outline-danger" href="@Url.Action("Delete","Materials", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }

</table>
